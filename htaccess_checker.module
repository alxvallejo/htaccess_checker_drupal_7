  foreach ($languages as $lang) {
    $form['htaccess_checker_domains'][$lang->language] = array(
      '#type' => 'textfield',
      '#title' => $lang->name,
      '#default_value' => isset($options[$lang->language]) ? $options[$lang->language] : '',
